# Gmail OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Session Secret
SESSION_SECRET=your_random_session_secret_here

# Apple Sign In
# Bundle ID must match the iOS app's bundle identifier
APPLE_BUNDLE_ID=com.junkpile.app

# JWT Secret for server-issued session tokens (Apple Sign-In users)
# Generate a strong random string for production
JWT_SECRET=your_random_jwt_secret_here
